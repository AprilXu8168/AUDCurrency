@model audBackEnd.Models.CurrencyItem

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            font-size: 1.5em;
            margin-bottom: 20px;
            border-bottom: 2px solid #ddd;
        }
        dl.row {
            margin: 0;
            padding: 0;
        }
        dt {
            font-weight: bold;
            padding: 5px 0;
            margin: 0;
        }
        dd {
            margin: 0 0 10px;
            padding: 0;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            color: #fff;
            text-align: center;
            font-size: 16px;
        }
        .btn-primary {
            background-color: #007bff;
        }
        .btn-secondary {
            background-color: #6c757d;
        }
        .btn:hover {
            opacity: 0.8;
        }
        .text-right {
            text-align: right;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card-header">
            <h4>Currency Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Timestamp)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Timestamp)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.moneyCode)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.moneyCode)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.baseValue)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.baseValue)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.value)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.value)
                </dd>
            </dl>
            <div class="text-right">
                <a class="btn btn-primary" asp-action="CurrencyEdit" asp-route-id="@Model?.ID">Edit</a>
                <a class="btn btn-secondary" asp-action="CurrencyList">Back to List</a>
            </div>
        </div>
    </div>

</body>
</html>
